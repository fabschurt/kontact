ENVIRONMENT="dev|prod|test" ; default=prod
DEBUG="true|false" ; default=false
LOCALE="en|fr" ; default=en
ADMIN_EMAIL="admin@example.org"

MAILER__HOST="smtp.example.org"
MAILER__PORT="25|587|465" ; default=25
MAILER__USERNAME="username"
MAILER__PASSWORD="password"
MAILER__ENCRYPTION="tls|ssl" ; optional
MAILER__AUTH_MODE="plain|login|cram-md5" ; optional

MAILER__MESSAGE__SUBJECT="Some subject" ; default=Kontact
MAILER__MESSAGE__SENDER_ADDRESS="john@example.org" ; default=$ADMIN_EMAIL
MAILER__MESSAGE__SENDER_NAME="John Smith" ; optional
MAILER__MESSAGE__RECIPIENT_ADDRESS="john@example.org" ; default=$ADMIN_EMAIL
MAILER__MESSAGE__RECIPIENT_NAME="John Smith" ; optional
